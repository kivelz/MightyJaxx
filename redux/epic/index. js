import axios from 'axios';
import {getUnsplashData, getUnsplashDataSuccess, getUnsplashDataFailed} from '../action/';


const apiActionCreator = (url) => (dispatch) => {
        dispatch(getUnsplashData());
        return new Promise(() => {
            axios
            .get(url)
            .then((response) => {
                console.log('unsplash api response', response.data)
                dispatch(getUnsplashDataSuccess(response.data));
            })
            .catch((error) => {
                dispatch(getUnsplashDataFailed(error));
                console.log(error);
            });
        });
};

export default apiActionCreator;